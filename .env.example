# GitHub configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username_or_org
GITHUB_REPO=github-lambda

# Server configuration
PORT=8080

# Authentication configuration
# Set to "true" to disable authentication (not recommended for production)
AUTH_DISABLED=false

# Path to JSON file for persisting API keys (optional)
API_KEYS_FILE=./api_keys.json

# Set to "true" to generate a bootstrap admin API key on first run
BOOTSTRAP_ADMIN_KEY=true

# Secret for verifying callback signatures from GitHub Actions (optional but recommended)
CALLBACK_SECRET=your_random_secret_here

# Rate Limiting configuration
# Set to "true" to disable rate limiting (not recommended for production)
RATE_LIMIT_DISABLED=false

# Maximum requests per second (token bucket refill rate)
RATE_LIMIT_RPS=100

# Maximum burst size (token bucket capacity)
RATE_LIMIT_BURST=200

# Maximum concurrent requests being processed
RATE_LIMIT_MAX_CONCURRENT=50

# Maximum requests that can wait in queue
RATE_LIMIT_QUEUE_SIZE=100

# Logging configuration
LOG_LEVEL=info

# Optional: Callback URL for workflow completion notifications
# LAMBDA_CALLBACK_URL=https://your-server.com
